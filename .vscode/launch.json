{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "python": "${command:python.interpreterPath}",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            # // "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/"
            },
            "stopOnEntry": True,
            "justMyCode": False,
        },
        {
            "name": "Python: Pytest Debug",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                # // "--alluredir=./allure_result_folder",
                "${file}",
                "-v",
                "-s"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "stopOnEntry": True,
            "justMyCode": False,
        },
    ]
}
